<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RevealLayout">
        <attr name="revealAnimationDuration" format="integer" />
        <attr name="hideAnimationDuration" format="integer" />
        <attr name="startRevealPercent" format="float" />
        <attr name="clipPathProvider" format="enum" >
            <enum name="circular" value="0" />
            <enum name="linear" value="1" />
            <enum name="random_line" value="2" />
            <enum name="star" value="3" />
            <enum name="sweep" value="4" />
            <enum name="wave" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EasyRevealLinearLayout" parent="RevealLayout">
        <attr name="revealAnimationDuration"/>
        <attr name="hideAnimationDuration"/>
        <attr name="startRevealPercent"/>
        <attr name="clipPathProvider"/>
    </declare-styleable>
    <declare-styleable name="EasyRevealConstraintLayout" parent="RevealLayout">
        <attr name="revealAnimationDuration"/>
        <attr name="hideAnimationDuration"/>
        <attr name="startRevealPercent"/>
        <attr name="clipPathProvider"/>
    </declare-styleable>
    <declare-styleable name="EasyRevealFrameLayout" parent="RevealLayout">
        <attr name="revealAnimationDuration"/>
        <attr name="hideAnimationDuration"/>
        <attr name="startRevealPercent"/>
        <attr name="clipPathProvider"/>
    </declare-styleable>
</resources>